{
  "log_file": "logs/service_monitor.log",
  "log_level": "INFO",
  "mongodb": {
  "enabled": true,
  "host": "localhost",
  "port": 27017,
  "database": "service_monitoring"
  },
  "targets": [
    {
      "name": "local-nginx",
      "method": "local",
      "service": "nginx.service",
      "interval_sec": 15,
      "recover_on_down": true,
      "recover_action": "start"
    },
    {
      "name": "remote-prometheus",
      "method": "ssh",
      "host": "10.10.0.15",
      "service": "prometheus.service",
      "ssh": {
        "user": "svcctl", 
        "port": 22
      },
      "interval_sec": 45,
      "recover_on_down": true,
      "recover_action": "restart"
    }
  ]
}
