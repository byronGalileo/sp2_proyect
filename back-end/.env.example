# MongoDB Configuration for Service Monitoring
# Copy this file to .env and adjust values as needed

# MongoDB Connection Settings
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USERNAME=
MONGO_PASSWORD=
MONGO_AUTH_DB=admin

# Database and Collection Names
MONGO_DB_NAME=service_monitoring
MONGO_LOGS_COLLECTION=logs
MONGO_EVENTS_COLLECTION=events

# Optional: MongoDB Atlas connection string (uncomment if using Atlas)
# MONGO_CONNECTION_STRING=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority