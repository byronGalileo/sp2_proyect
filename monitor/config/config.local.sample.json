{
  "log_file": "logs/service_monitor.log",
  "log_level": "INFO",
  "targets": [
    {
      "name": "local-my-sql",
      "method": "local",
      "service": "mysql.service",
      "credentials": { 
        "user": "xxx",
        "password": "xxxx"
       },
      "recover_on_down": true,
      "interval_sec": 10,
      "recover_action": "restart",
      "timeout_sec": 20,
      "active": true,
      "use_sudo": false
    },
    {
      "name": "local-prometheus",
      "method": "local",
      "service": "prometheus.service",
      "credentials": { 
        "user": "xxx",
        "password": "xxxx"
       },
      "recover_on_down": true,
      "interval_sec": 20,
      "recover_action": "restart",
      "timeout_sec": 20,
      "active": true,
      "use_sudo": false
    }
  ]
}